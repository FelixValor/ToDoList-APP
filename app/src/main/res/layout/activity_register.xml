<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green_400">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logo"
            android:layout_marginBottom="50dp"/>
        <EditText
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/usuario"
            android:drawablePadding="5dp"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawableStart="@drawable/ic_person" />

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_email"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="5dp"
            android:hint="Email"
            android:padding="15dp" />

        <EditText
            android:id="@+id/txt_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contrase_a"
            android:drawablePadding="5dp"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableStart="@drawable/ic_lock"
            android:layout_marginBottom="50dp"/>

        <EditText
            android:id="@+id/txt_passwordConfirm"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repita la contraseÃ±a"
            android:drawablePadding="5dp"
            android:background="@color/white"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableStart="@drawable/ic_lock"
            android:layout_marginBottom="50dp"/>

        <CheckBox
            android:id="@+id/capcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No soy un robot"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrase"
            android:background="@color/light_green_100"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:padding="20dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>